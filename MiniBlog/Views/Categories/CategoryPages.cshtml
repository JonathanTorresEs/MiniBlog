@model MiniBlog.Models.Category

@{
    ViewBag.Title = "CategoryPages";
}

<h2>Pages in this Category</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Posts:
        </dt>

    @foreach (var item in Model.PageCategory)
    {
        <dd>
                @Html.DisplayFor(modelItem => item.Page.Title)
        </dd>

        <dd>
            @Html.ActionLink("View Page", "Details", "Pages", new { id = item.ID }, null)
        </dd>
    }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
